{
  "name": "Off Chat Facebook",
  "description": "Off Chat Facebook",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "images/fb_48.png"
  },
  "icons": {
    "16": "images/fb_16.png",
    "32": "images/fb_32.png",
    "48": "images/fb_48.png",
    "128": "images/fb_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "https://*.facebook.com/*",
    "tabs",
    "background",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "manifest_version": 2
}

